
<br>
<h1>Friends</h1>
<br><br>
<h3>Search friends</h3>

<%= form_tag 'search_friend', remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9 norp">
      <%= text_field_tag :friend, params[:friend], placeholder: "friends name", autofocus: true, class: "form-control form-control-lg"%>

    </div>
    <div class="col-sm-3 nolp">
      <%= button_tag type: :submit , class: "btn btn-success" do %>
        <%= fa_icon 'search 2x'%>
      <% end %>
    </div>
  </div>

<% end %>

<div id="result">

</div>
<br>
<%= render 'friends/list' %>