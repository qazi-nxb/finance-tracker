<%= render 'layouts/messages' %>

<% if @friends %>
  <div class="card card-header col-9">
    <table class="col-md-12 ">
      <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <td><strong> Full name </strong> <%= friend.full_name%></td>
      <td><strong> Email </strong> <%= friend.email%></td>
      <td><strong> Action </strong> <%= link_to "View Profile", user_path(friend) , class: "btn btn-sm btn-success"%>
                            <% if current_user.not_friends?(friend.id) %>
                            <%=link_to "Follow Friend", friendships_path(friend: friend) , class: "btn btn-sm btn-success", method: :post %></td>
                            <%else %>
                              <span class="badge bg-secondary">
                                Already added
                              </span>
                            <% end %>
          </tr>
      <%end %>
      </tbody>
    </table>
  </div>
<% end %>